<p id="notice"><%= notice %></p>

<h1>Orders reports</h1>

<table>
  <thead>
    <tr>
      <th>Customer name</th>
      <th>City</th>
      <th>Street</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.customer_name %></td>
        <td><%= order.city %></td>
        <td><%= order.street %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
